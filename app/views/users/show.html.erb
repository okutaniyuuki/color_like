<h1>マイページ</h1>

<table class="table">
	<tr>
		<%= attachment_image_tag(@user, :image, :fill, 100, 100, fallback: "no_image.jpg") %>
	</tr>

	<tr>
		<%= @user.first_name %>  <%= @user.last_name %>
	</tr>

	<tr>
		<h3>得意な技術</h3>
	</tr>

	<tr>
		<%= @user.forte %>
	</tr>

	<tr>
		<h3>好きなメーカー</h3>
	</tr>

	<tr>
		<%= @user.like_maker %>
	</tr>

	<tr>
		<h3>プロフィール</h3>
	</tr>

	<tr>
		<%= @user.introduction %>
	</tr>
</table>
<div>
		<h4><%= link_to"お問い合わせはこちら", message_index_path %></h4>
</div>


<h1>自分の投稿一覧</h1>


<table>
	<% @post.each do |post| %>
		<tr>
			<td>
				<%= post.user.last_name %>
				<%= post.user.first_name %>
			</td>
				<%= attachment_image_tag(post, :post_image, :fill, 150, 150, fallback: "no_image.jpg") %>
			</td>
			<th><%= post.name %></th>

			<td>
				<%=	post.maker_janru_id %>
			</td>

			<td>
				<%= post.color_janru_id %>
			</td>

			<th>
				<ハートのアイコン挿入>
				<%= post.favorites.count %>
			</th>


			<td>
				<%= link_to "この投稿詳細へ", post_path(post) %>
			</td>
		</tr>
	<% end %>
</table>
<div>
	<%= paginate @post %>
</div>


<div>
	<%= link_to "投稿ページへ", new_post_path %>
</div>

<div>
	<%= link_to "お気に入り一覧ページへ", bookmarks_path %>
</div>

<div>
	<%= link_to "マイページの編集をする", edit_user_path %>
</div>

<div>
	<%= link_to "投稿一覧へ", posts_path %>
</div>
<div>
	<%= link_to "自分の投稿一覧へ", user_path %>
</div>
