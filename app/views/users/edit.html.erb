

<div class="text-center">
	<h1>マイページ編集</h1>
		<%= form_for(@user) do |f| %>


		   		<label><h3>アイコン</h3></label>
		   		<div>
				<%= f.attachment_field :image %>
			    </div>


			<div>
				<label><h3>苗字</h3></label>
				<%= f.text_field :first_name %>

				<label><h3>名前</h3></label>
				<%= f.text_field :last_name %>
			</div>

			<div>
				<label><h3>得意な技術</h3></label>
				<%= f.text_field :forte %>
			</div>

			<div>
				<label><h3>好きなメーカー</h3></label>
				<%= f.text_field :like_maker %>
			</div>

			<div>
				<label><h3>プロフィール</h3></label>
				<%= f.text_area :introduction %>
			</div>

			<div>
				<%= f.submit "編集内容を保存する", class: "btn btn-success" %>
			</div>
		<% end %>
		<div>
		    	<%= link_to "このアカウントを削除する", user_path(@user.id), method: :delete, class: "btn btn-danger" %>
		</div>
</div>




